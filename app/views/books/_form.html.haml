= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :user_id
    %br/
    = f.collection_select :user_id, User.all, :id, :email
  .field
    = f.label :location
    %br/
    = f.collection_select :location_id, Location.all, :id, :name
  .field
    = f.label :isbn
    %br/
    = f.text_field :isbn
  .actions
    = f.submit
