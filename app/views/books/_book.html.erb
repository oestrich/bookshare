
<div class='book_wrapper'>
    <div class='book <%= book.book_status_css %>'>
      <%= link_to image_tag(book.image_url, :title => book.borrow_status), book %> 
    <p class='title'><%= book.title %></p>
    <% if book.borrowed? %>
      <div class='return_link'>
        <%= link_to "Return book", return_book_path(book) %>
      </div>
    <% end %>
  </div>
</div>

